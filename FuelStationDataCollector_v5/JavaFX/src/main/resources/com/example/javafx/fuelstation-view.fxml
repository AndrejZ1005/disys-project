<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.JavaFXController">
    <children>
        <Label layoutX="54.0" layoutY="24.0" text="Invoice Generator">
            <font>
                <Font name="Arial Black" size="24.0" />
            </font>
        </Label>
        <Label layoutX="24.0" layoutY="203.0" prefHeight="18.0" prefWidth="77.0" text="Customer ID:" />
        <TextField fx:id="customerId" layoutX="108.0" layoutY="199.0" prefHeight="26.0" prefWidth="172.0" />
        <Button layoutX="107.0" layoutY="236.0" mnemonicParsing="false" onAction="#onButtonCustomerIDClicked" text="Generate Invoice" />
        <Button layoutX="228.0" layoutY="236.0" mnemonicParsing="false" onAction="#onButtonCancelClicked" text="Cancel" />
        <ImageView fitHeight="92.0" fitWidth="200.0" layoutX="112.0" layoutY="76.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../Images/image.jpg" />
            </image>
        </ImageView>
        <Label layoutX="348.0" layoutY="34.0" text="Invoices:" />
        <ListView fx:id="invoices" layoutX="342.0" layoutY="76.0" prefHeight="244.0" prefWidth="200.0" />
        <Button layoutX="342.0" layoutY="351.0" mnemonicParsing="false" onAction="#onButtonOpenPDFClicked" text="Open PDF File" />
    </children>
</AnchorPane>
